@using MvcCV.Models.Entity
@model List<TBLSERTİFİKALARIM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string renk = ""; }
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">


                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            @if (item.ID % 2 == 0)
                                            {
                                                renk = "btn btn-success";
                                            }
                                            else
                                            {
                                                renk = "btn btn-primary";
                                            }
                                            <a href="/Sertifika/SertifikaGetir/@item.ID" class="@renk">
                                                <span class="@renk">
                                                    @item.Tarih
                                                </span>
                                            </a>
                                        </div>
                                        <div>
                                            @*<i class="fas fa-comment bg-primary"></i>*@
                                            <div class="timeline-item">

                                                <div class="timeline-body">
                                                    @item.Aciklama
                                                </div>
                                                @* <div class="timeline-footer">
                                                        <a href="#" class="btn btn -primary btn-sm">Düzenle</a>
                                                        <a href="#" class="btn btn-danger btn-sm">Sil</a>
                                                    </div>*@
                                            </div>
                                        </div>
                                    }
                                </div>
                                <a href="/Sertifika/YeniSertifika" class="btn btn-info">Yeni Sertifika Girişi</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>