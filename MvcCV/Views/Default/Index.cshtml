@using MvcCV.Models.Entity;
@model List<TBLHAKKIMDA>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Yusuf ZENGİN </title>
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/AdminLTE-3.0.4/dist/img/man.png" rel="shortcut icon" />

    <link href="~/startbootstrap-resume-gh-pages/css/styles.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            <span class="d-block d-lg-none">Yusuf ZENGİN</span>
            @foreach (var item in Model)
            {
                <span class="d-none d-lg-block">
                    <img class="img-fluid img-profile rounded-circle mx-auto mb-2"
                         src="@item.Resim" alt="" />
                </span>
            }
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#about">HAKKIMDA</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#experience">DENEYİM VE PROJELERİM</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#education">EĞİTİM HAYATIM</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#skills">YETENEKLERİM</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#awards">SERTİFİKALARIM</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#interests">HOBİLERİM</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#contact">İLETİŞİM</a></li>

            </ul>
        </div>
    </nav>
    <!-- Page Content-->
    <div class="container-fluid p-0">
        <!-- Hakkımda abaout-->
        @foreach (var x in Model)
        {
            <section class="resume-section" id="about">
                <div class="resume-section-content">
                    <h1 class="mb-0">
                        @x.Ad
                        <span class="text-primary">@x.Soyad</span>
                    </h1>
                    <div class="subheading mb-5">
                        @x.Adres · @x.Telefon
                        <a href="mailto:@x.Mail">@x.Mail</a>
                    </div>
                    <p class="lead mb-5">@x.Aciklama</p>
                    @Html.Action("SosyalMedya")
                </div>
            </section>
        }
        <hr class="m-0" />

        <!-- experience DENEYİM -->
        <section class="resume-section" id="experience">
            @Html.Action("Deneyim")
        </section>
        <hr class="m-0" />
        <!-- Education EGİTİM HAYATI-->
        <section class="resume-section" id="education">
            @Html.Action("Egitimlerim")
        </section>
        <hr class="m-0" />
        <!-- Skills Yetenekler-->
        <section class="resume-section" id="skills">
            @Html.Action("Yeteneklerim")
        </section>
        <hr class="m-0" />
        <!-- Awards SERTİFİKA -->
        <section class="resume-section" id="awards">
            @Html.Action("Sertifikalarım")
        </section>
        <hr class="m-0" />
        <!-- Interests HOBİLER -->
        <section class="resume-section" id="interests">
            @Html.Action("Hobilerim")
        </section>
        <hr class="m-0" />
        <!-- contact İLETİSİM -->
        <section class="resume-section" id="contact">
            @Html.Action("İletisim")
        </section>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Core theme JS-->
    <script src="/startbootstrap-resume-gh-pages/js/scripts.js"></script>
</body>
</html>
